{
  "name": "<% if (props.scope) { %><%= props.scope %>/<% } %><%= props.name %>",
  "version": "1.0.0",
  "description": "<%= props.description %>",
  "main": "bundles/<%= props.name %>.umd.js",
  "module": "index.js",
  "typings": "index.d.ts",
  <%_ if (props.private == true) { _%>
  "private": true,
  <%_ } _%>
  "keywords": [
    "angular",
    "angular2",
    "angular 2",
    "angular4"
  ],
  "author": "<%= props.author %>",
  "license": "SEE LICENSE IN LICENSE",
  "repository": {
    "type": "git",
    "url": "<%= props.repository %>"
  },
  "homepage": "<%= props.repository %>",
  "bugs": {
    "url": "<%= props.repository %>"
  },
  "peerDependencies": {
    "@angular/core": "^4.0.0",
    "rxjs": "^5.0.0"
  }
}
